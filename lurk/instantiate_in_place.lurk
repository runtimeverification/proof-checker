!(defrec is_e_fresh? (lambda (p idList)
    (if (eq idList nil)
        nil
        (if (pattern_e_fresh (car idList) p)
            (is_e_fresh? p (cdr idList))
            t
        ))))

!(defrec is_s_fresh? (lambda (p idList)
    (if (eq idList nil)
        nil
        (if (pattern_s_fresh (car idList) p)
            (is_s_fresh? p (cdr idList))
            t
